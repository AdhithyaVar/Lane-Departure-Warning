{
    "processing": {
        "canny_low": 35,
        "canny_high": 100,
        "hough_threshold": 25,
        "hough_min_line_length": 30,
        "hough_max_line_gap": 80,
        "roi_vertices": {
            "top_left": [0.4, 0.65],
            "top_right": [0.6, 0.65],
            "bottom_right": [0.95, 1.0],
            "bottom_left": [0.05, 1.0]
        },
        "slope_threshold": 0.35,
        "kernel_size": 5,
        "frame_history": 10,
        "smoothing_window": 3
    },
    "warning_system": {
        "warning_threshold": 0.12,
        "critical_threshold": 0.2,
        "time_to_warning": 0.3,
        "warning_persistence": 0.8,
        "enable_audio": true,
        "audio_volume": 0.9
    },
    "capture": {
        "resolution": {
            "width": 1280,
            "height": 720
        },
        "fps": 30,
        "video_duration": 30,
        "auto_exposure": true,
        "exposure_time": 0.005,
        "gain": 1.2
    },
    "output": {
        "save_warnings": true,
        "save_metrics": true,
        "generate_reports": true,
        "snapshot_quality": 90,
        "report_format": "utf-8",
        "visualization": {
            "show_roi": true,
            "show_lines": true,
            "show_metrics": true,
            "line_thickness": 2,
            "text_scale": 0.7
        }
    },
    "performance": {
        "enable_gpu": true,
        "use_threading": true,
        "max_threads": 4,
        "buffer_size": 3,
        "batch_processing": false,
        "batch_size": 1
    },
    "environment": {
        "type": "city",
        "description": "Optimized for urban driving with frequent turns, traffic lights, and pedestrians",
        "light_condition": "day",
        "traffic_density": "high",
        "road_type": "urban",
        "challenges": [
            "frequent stops",
            "tight turns",
            "complex intersections",
            "pedestrian crossings"
        ],
        "adaptive_settings": {
            "enable_dynamic_roi": true,
            "enable_light_adaptation": true,
            "enable_traffic_awareness": true
        }
    }
}
